<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.moonlightbutterfly.bookid.viewmodels.BookViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryColor">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{viewModel.allDataLoaded.booleanValue()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/scrollView2" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primaryColor"
            tools:context=".fragments.BookFragment"
            android:visibility="@{viewModel.allDataLoaded.booleanValue()}">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="16dp"
                    app:imageUrl="@{viewModel.book.imageUrl}" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/MediumLabel"
                        android:layout_weight="1"
                        android:gravity="center|center_vertical"
                        android:text="@{viewModel.book.title, default=@string/default_title}"
                        android:textSize="18sp" />

                    <TextView
                        style="@style/MediumLabel"
                        android:layout_weight="1"
                        android:gravity="center|center_vertical"
                        android:text="@{viewModel.book.author.name, default=@string/default_author}"
                        android:textSize="18sp" />

                    <TextView
                        style="@style/MediumLabel"
                        android:layout_weight="1"
                        android:gravity="center|center_vertical"
                        android:text="@{viewModel.book.publicationDate, default=@string/publication_date_default}" />

                    <TextView
                        style="@style/MediumLabel"
                        android:layout_weight="1"
                        android:gravity="center|center_vertical"
                        android:text="@{Double.toString(viewModel.book.rating), default=@string/rating_default}" />

                </LinearLayout>

                <com.moonlightbutterfly.bookid.customviews.LineSeparator
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:orientation="HORIZONTAL" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        style="@style/BookidButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:text="@string/add_to_shelf" />

                    <Button
                        style="@style/BookidButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="@string/buy_book" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        style="@style/BookidButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:text="@string/remove_from_shelf" />

                    <Button
                        style="@style/BookidButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="@string/borrow_book" />

                </LinearLayout>


                <com.moonlightbutterfly.bookid.customviews.LineSeparator style="@style/LineSeparatorHorizontal" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:imageUrl="@{viewModel.authorDetailed.imageUrl}" />

                    <TextView
                        style="@style/MediumLabel"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@{viewModel.authorDetailed.name, default=@string/default_author}" />
                </LinearLayout>

                <com.moonlightbutterfly.bookid.customviews.LineSeparator style="@style/LineSeparatorHorizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/LargeLabel"
                        android:layout_marginTop="16dp"
                        android:text="@string/other_author_books" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/authorBooks"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:scrollbars="horizontal" />
                </LinearLayout>

                <com.moonlightbutterfly.bookid.customviews.LineSeparator style="@style/LineSeparatorHorizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/LargeLabel"
                        android:layout_marginTop="16dp"
                        android:text="@string/similar_books" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/similarBooks"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:scrollbars="horizontal" />
                </LinearLayout>

                <com.moonlightbutterfly.bookid.customviews.LineSeparator style="@style/LineSeparatorHorizontal" />

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>