<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="java.util.List" />

        <import type="com.moonlightbutterfly.bookid.repository.database.entities.Book" />

        <variable
            name="books"
            type="List&lt;Book>" />

        <variable
            name="title"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_title"
                style="@style/LargeLabel"
                android:text="@{title}" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_recycler"
                style="@style/BooksListRecycler"
                app:dataList="@{books}" />
        </LinearLayout>

        <com.moonlightbutterfly.bookid.customviews.LineSeparator style="@style/LineSeparatorHorizontal" />

    </LinearLayout>
</layout>