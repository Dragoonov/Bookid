<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryDarkColor</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="MediumLabel">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MediumLabelIntense" parent="MediumLabel">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallLabelIntense" parent="SmallLabel">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Subtitle" parent="MediumLabel">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Authors" parent="SmallLabel">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LargeLabel" parent="MediumLabel" >
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
    
    <style name="Title" parent="LargeLabel" >
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallLabel" parent="MediumLabel">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LineSeparatorHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="orientation">HORIZONTAL</item>
    </style>

    <style name="LineSeparatorVertical">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="orientation">VERTICAL</item>
    </style>

    <style name="BookidButton">
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_border</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/secondaryDarkColor</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="LargeBookidButton" parent="BookidButton">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="BooksListRecycler">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:scrollbars">horizontal</item>
    </style>

    <style name="MenuItemMedium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MenuItemSmall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
